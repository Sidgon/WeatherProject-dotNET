@model Tuple<List<List<DTO.WeatherData>>, List<string>>

@{
    ViewBag.Title = "Weatherdata";
}

<style>
    table, th, td {

        border: 1px solid black;
        
    }

    td, h2 {
        text-align: center;
    }

    h2 {
        font-size: 35px;
    }

    caption {
       font-size: 25px; 
       font-weight: 700;
    }

    .wrapper {
        text-align: center;
    }

    input {
        position: absolute;
        top: 2425px;
        left: 45%;
    }

    .myp{
        padding-top: 40px;
    }

</style>

<body background="~/Content/images/Weather2.jpg">

    <h2>Weather</h2>

    @{
        int counter = 0;
        foreach (List<DTO.WeatherData> item in Model.Item1)
        {

            <table align="center">
                <caption> @item.Last().Date.DayOfWeek </caption>
                <tr>
                    <th>Time</th>
                    <th style="text-align: center;">00:00-06:00</th>
                    <th style="text-align: center;">06:00-12:00</th>
                    <th style="text-align: center;">12:00-18:00</th>
                    <th style="text-align: center;">18:00-24:00</th>
                </tr>

                <tr>
                    <th>Forecast</th>

                    @foreach (DTO.WeatherData data in item)
                    {

                        <td>
                            <img src="@Url.Content(@Model.Item2[counter])" />
                        </td>
                        counter++;
                    }
                </tr>

                <tr>
                    <th>Temperature</th>
                    @foreach (DTO.WeatherData data in item)
                    {
                        <td>
                            <text>@data.Temperatur &#176;</text>
                        </td>
                    }

                </tr>

                <tr>
                    <th>Suntime</th>
                    @foreach (DTO.WeatherData data in item)
                    {
                        <td>
                            <text>@data.Suntime h</text>
                        </td>
                    }
                </tr>

                <tr>
                    <th>Rain Precipitation</th>
                    @foreach (DTO.WeatherData data in item)
                    {
                        <td>
                            <text>@data.RainPrecipation %</text>
                        </td>
                    }
                </tr>

                <tr>
                    <th>Wind Precipitation</th>
                    @foreach (DTO.WeatherData data in item)
                    {
                        <td>
                            <text>@data.Wind km/h</text>
                        </td>
                    }
                </tr>

                <tr>
                    <th>   </th>
                    @foreach (DTO.WeatherData data in item)
                    {
                        <td>
                            @Html.ActionLink("Change/Delete", "Change", new { id = data.Id, idlocation = ViewBag.idlocation })
                        </td>
                    }
                </tr>


            </table>
        }
    }
    <p class="myp">
    </p>
    <div class="wrapper">
        <input type="button" class="btn btn-default" value="Delete this Weather Station" onclick="location.href='@Url.Action("Delete", "WeatherData", new {Model.Item1, idlocation=ViewBag.idlocation})'" />
    </div>
    </body>

